<!DOCTYPE html>
<html>
  {{> head}}
  {{> header}}
  <body>
    <form action="/login" method="post">
      <div class="row column log-in-form">
        <h4 class="text-center">Login with your user name</h4>
        <label for="email">E-mail</label>
        <input id="email" name="email" placeholder="somebody@mailbox.com" type="email"></input>
        <label for="password">Password</label>
        <input id="password" name="password" placeholder="Password" type="password"></input>
        <input class="button expanded" type="submit" value="Login"></input>
<!--         <p class="text-center">
          <a href="/email-login">Forgot password?</a>
        </p> -->
        <p class="text-center">
          <a href="/register">Are you new? Register!</a>
        </p>
      </div>
    </form>
  </body>
  {{> footer}}
</html>
