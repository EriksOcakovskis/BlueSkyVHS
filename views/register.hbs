<!DOCTYPE html>
<html>
  {{> head}}
  {{> header}}
  <body>
    <form action="/register" method="post">
      <div class="row column log-in-form">
        <h4 class="text-center">Create your BlueSky VHS Account</h4>
<!--         <label for="user">Username</label>
        <input id="user" name="user" placeholder="Somebody" type="text"></input> -->
        <label for="email">E-mail</label>
        <input id="email" name="email" placeholder="somebody@somebody.com" type="email"></input>
        <label for="password">Password</label>
        <input id="password" name="password" placeholder="Password" type="password"></input>

        {{#if error}}
          <div class="alert callout">
            <p>
              {{error}}
            </p>
          </div>
        {{/if}}

        <input class="button expanded" type="submit"></input>

        <p class="text-center">
          <a href="/login">Already have an account?</a>
        </p>
      </div>
    </form>
  </body>
  {{> footer}}
</html>
